{
  "name": "player",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:scss": "sass src/styles:dist/styles --no-source-map",
    "build:html": "cpx \"src/**/*.html\" dist",
    "build:js": "cpx \"src/scripts/**/*.js\" dist/scripts",
    "build:img": "node scripts/optimize-images.js",
    "build:music": "cpx \"src/music/**/*\" dist/music",
    "build:data": "cpx \"src/data/**/*.json\" dist/data",
    "build:fonts": "cpx \"node_modules/line-awesome/dist/line-awesome/fonts/**/*\" dist/fonts",
    "build": "npm run generate-palettes && npm run build:scss && npm run build:html && npm run build:js && npm run build:img && npm run build:music && npm run build:data && npm run build:fonts",
    "generate-palettes": "node scripts/generate-palettes.js",
    "watch:scss": "sass src/styles:dist/styles --no-source-map --watch",
    "watch:html": "cpx \"src/**/*.html\" dist --watch",
    "watch:js": "cpx \"src/scripts/**/*.js\" dist/scripts --watch",
    "watch:img": "cpx \"src/img/**/*\" dist/img --watch",
    "watch:music": "cpx \"src/music/**/*\" dist/music --watch",
    "watch:data": "cpx \"src/data/**/*.json\" dist/data --watch",
    "serve": "live-server dist --port=8080 --open",
    "dev": "concurrently \"npm run watch:scss\" \"npm run watch:html\" \"npm run watch:js\" \"npm run watch:img\" \"npm run watch:music\" \"npm run watch:data\" \"npm run serve\"",
    "clean": "rm -rf dist && mkdir dist"
  },
  "keywords": [],
  "author": "Jonny Pyper / Carbontype / Music Ccpyright belongs to respective owners",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cpx": "^1.5.0",
    "live-server": "^1.2.2",
    "music-metadata": "^11.9.0",
    "node-vibrant": "^4.0.3",
    "sass": "^1.93.2",
    "sharp": "^0.34.4"
  },
  "dependencies": {
    "line-awesome": "^1.3.0"
  }
}
